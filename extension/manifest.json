{
  "manifest_version": 3,
  "name": "Open side panel",
  "version": "1.0",
  "description": "Chat with Any website",
  "minimum_chrome_version": "116",
  "side_panel": {
    "default_path": "sidepanel-global.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/myScript.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "sidePanel",
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}