{
  "manifest_version": 3,
  "name": "ChatBar ü¶Å",
  "version": "1.0",
  "description": "Chat with Any website",
  "minimum_chrome_version": "116",
  "side_panel": {
    "default_path": "sidepanel-global.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/sidepanel.js",
        "scripts/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "sidePanel",
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "popup.html"
  }
}